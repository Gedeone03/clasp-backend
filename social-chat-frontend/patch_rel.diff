+import { playNotificationBeep, unlockAudio } from "../utils/notifySound";
+
+const LS_UNREAD_COUNTS = "clasp_unread_counts_v1";
+const LS_UNREAD_TOTAL = "clasp_unread_total_v1";
+const LS_ACTIVE_CONV = "clasp_active_conversation_v1";
+const LS_FRIEND_REQ_RECEIVED = "clasp_friend_requests_received_v1";
+
+function safeJsonParse<T>(raw: string | null, fallback: T): T {
+  try {
+    if (!raw) return fallback;
+    return JSON.parse(raw) as T;
+  } catch {
+    return fallback;
+  }
+}
+
+function readUnreadCounts(): Record<number, number> {
+  const raw = safeJsonParse<Record<string, any>>(localStorage.getItem(LS_UNREAD_COUNTS), {});
+  const out: Record<number, number> = {};
+  for (const [k, v] of Object.entries(raw || {})) {
+    const cid = Number(k);
+    const n = Number(v);
+    if (!cid || !Number.isFinite(cid)) continue;
+    if (!Number.isFinite(n) || n <= 0) continue;
+    out[cid] = Math.floor(n);
+  }
+  return out;
+}
+
+function writeUnreadCounts(counts: Record<number, number>) {
+  const clean: Record<string, number> = {};
+  let total = 0;
+
+  for (const [k, v] of Object.entries(counts || {})) {
+    const cid = Number(k);
+    const n = Number(v);
+    if (!cid || !Number.isFinite(cid)) continue;
+    if (!Number.isFinite(n) || n <= 0) continue;
+    const nn = Math.floor(n);
+    clean[String(cid)] = nn;
+    total += nn;
+  }
+
+  try {
+    localStorage.setItem(LS_UNREAD_COUNTS, JSON.stringify(clean));
+    localStorage.setItem(LS_UNREAD_TOTAL, String(total));
+  } catch {
+    // ignore
+  }
+
+  try {
+    window.dispatchEvent(new Event("clasp:badge"));
+  } catch {
+    // ignore
+  }
+}
+
+function setFriendReqReceivedCount(n: number) {
+  const nn = Math.max(0, Math.floor(Number(n) || 0));
+  try {
+    localStorage.setItem(LS_FRIEND_REQ_RECEIVED, String(nn));
+  } catch {
+    // ignore
+  }
+  try {
+    window.dispatchEvent(new Event("clasp:badge"));
+  } catch {
+    // ignore
+  }
+}
+
+function clearBadgeStorage() {
+  try {
+    localStorage.removeItem(LS_UNREAD_COUNTS);
+    localStorage.removeItem(LS_UNREAD_TOTAL);
+    localStorage.removeItem(LS_ACTIVE_CONV);
+    localStorage.removeItem(LS_FRIEND_REQ_RECEIVED);
+  } catch {
+    // ignore
+  }
+  try {
+    window.dispatchEvent(new Event("clasp:badge"));
+  } catch {
+    // ignore
+  }
+}
+
+function extractMessagePayload(payload: any): { conversationId: number; message: any } | null {
+  if (!payload) return null;
+
+  // server emits: { conversationId, message }
+  const msg = payload?.message ?? payload?.data?.message ?? payload?.msg ?? payload;
+  const cid = Number(payload?.conversationId || msg?.conversationId || 0);
+
+  if (!cid) return null;
+  return { conversationId: cid, message: msg };
+}
+
+/**
+ * ✅ RealtimeBridge
+ * - single Socket.IO connection (JWT auth)
+ * - joins all conversations periodically (to receive message events)
+ * - updates:
+ *   - unread badges (per conversation + total)
+ *   - friend requests received badge (polling)
+ * - dispatches browser events for pages:
+ *   - "clasp:message" (detail: { conversationId, message })
+ *   - "clasp:badge" (simple event)
+ */
+export default function RealtimeBridge() {
+  const { user } = useAuth();
+  const myId = Number((user as any)?.id || 0) || null;
+
+  // avoid repeated joins spam when multiple rerenders happen
+  const joinedOnceRef = useRef(false);
+
+  // Unlock audio on first user interaction (mobile browsers require a gesture)
+  useEffect(() => {
+    let done = false;
+
+    const tryUnlock = async () => {
+      if (done) return;
+      const ok = await unlockAudio().catch(() => false);
+      if (ok) {
+        done = true;
+        window.removeEventListener("pointerdown", tryUnlock);
+        window.removeEventListener("keydown", tryUnlock);
+      }
+    };
+
+    window.addEventListener("pointerdown", tryUnlock);
+    window.addEventListener("keydown", tryUnlock);
+
+    return () => {
+      window.removeEventListener("pointerdown", tryUnlock);
+      window.removeEventListener("keydown", tryUnlock);
+    };
+  }, []);
+
+  // When user logs out, clear local badges.
+  useEffect(() => {
+    if (!user) {
+      clearBadgeStorage();
+    }
+  }, [user]);
+
+  const socketApi = useChatSocket(myId, {
+    onMessage: async (payload: any) => {
+      const parsed = extractMessagePayload(payload);
+      if (!parsed) return;
+
+      const cid = Number(parsed.conversationId);
+      const msg = parsed.message;
+
+      // Notify pages (HomePage will update UI in real-time)
+      try {
+        window.dispatchEvent(new CustomEvent("clasp:message", { detail: { conversationId: cid, message: msg } }));
+      } catch {
+        // ignore
+      }
+
+      // Unread + sound only for incoming messages
+      const senderId = Number(msg?.senderId || 0);
+      if (myId && senderId === myId) return;
+
+      const activeCid = Number(localStorage.getItem(LS_ACTIVE_CONV) || 0);
+      const isActiveConversation = document.visibilityState === "visible" && activeCid === cid;
+
+      // if I'm currently in that chat, keep it read
+      if (isActiveConversation) {
+        const counts = readUnreadCounts();
+        if (counts[cid]) {
+          delete counts[cid];
+          writeUnreadCounts(counts);
+        }
+        return;
+      }
+
+      // increment unread
+      const counts = readUnreadCounts();
+      counts[cid] = (counts[cid] || 0) + 1;
+      writeUnreadCounts(counts);
+
+      // beep (best effort)
+      try {
+        await playNotificationBeep();
+      } catch {
+        // ignore
+      }
+    },
+  });
+
+  // Join all conversations periodically so we receive message events for all chats.
+  useEffect(() => {
+    if (!myId) return;
+
+    let alive = true;
+
+    const joinAll = async () => {
+      try {
+        const convs = await (api as any).fetchConversations?.();
+        if (!alive) return;
+
+        const arr = Array.isArray(convs) ? convs : [];
+        for (const c of arr) {
+          const cid = Number((c as any)?.id || 0);
+          if (cid) socketApi.joinConversation(cid);
+        }
+      } catch {
+        // ignore
+      }
+    };
+
+    // initial join (a couple of retries to cover slow auth init)
+    joinAll();
+    const t1 = window.setTimeout(joinAll, 1200);
+    const t2 = window.setTimeout(joinAll, 3500);
+
+    // periodic re-join (idempotent)
+    const iv = window.setInterval(joinAll, 20000);
+
+    joinedOnceRef.current = true;
+
+    return () => {
+      alive = false;
+      window.clearTimeout(t1);
+      window.clearTimeout(t2);
+      window.clearInterval(iv);
+      joinedOnceRef.current = false;
+    };
+  }, [myId, socketApi]);
+
+  // Poll friend requests received → badge on "Amici"
+  useEffect(() => {
+    if (!myId) return;
+
+    let alive = true;
+
+    const tick = async () => {
+      try {
+        const received = await (api as any).fetchFriendRequestsReceived?.();
+        if (!alive) return;
+
+        const arr = Array.isArray(received) ? received : [];
+        setFriendReqReceivedCount(arr.length);
+      } catch {
+        // ignore
+      }
+    };
+
+    tick();
+    const iv = window.setInterval(tick, 25000);
+
+    return () => {
+      alive = false;
+      window.clearInterval(iv);
+    };
+  }, [myId]);
+
+  return null;
+}
